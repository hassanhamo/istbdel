<div class="content1" ng-show="currentUser">
    <div class="slider-content" style="height: 300px">



        <img src="/assets/img/bg-title@2x.png" style="height:100%; width:100%">

        <div class="user">
            <img src="{{user.avatar || 'assets/img/user@2x.png'}}" />
            <div class="desc">
                <span class="name">{{user.fullName}}</span>
                </br>
                <span class="address">{{user.adresse}}</span>
            </div>
        </div>
        <div class="credit " ng-show="user.credit">
            <span class="pointer" data-toggle="modal" data-target="#info-credit">الباقي: {{user.credit}} ريال</span>

        </div>
        <div class="count row">
            <div class="nb col-xs-4">
                <span>{{annonceCount||0}}</br>اعلانات</span>
                <span class="bar"></span>
            </div>

            <div class="nb col-xs-4">
                <span>{{favCount||0}}</br>المفضلة</span>
                <span class="bar"></span>
            </div>

            <div class="nb col-xs-4">
                <span>{{purchaseCount||0}}</br>مبيعات</span>
            </div>



        </div>



    </div>
    <div class="user-content">
        <div class="user-tab">
            <div class="header-user row">
                <div class="col-xs-4">
                    <div class="{{tab==1?'c-red':''}} pointer" ng-click="tab=1">
                        <i class="fa fa-th"></i>
                        <span>إعلاناتي</span>
                    </div>

                </div>
                <div class="col-xs-4">
                    <div class="{{tab==2?'c-red':''}} pointer" ng-click="tab=2">
                        <i class="fa fa-heart-o"></i>
                        <span>المفضلة</span>
                    </div>

                </div>
                <div class="col-xs-4">
                    <div class="{{tab==3?'c-red':''}} pointer" ng-click="tab=3">
                        <i class="fa fa-user"></i>
                        <span>حسابي</span>
                    </div>

                </div>


            </div>
            <div class="bordure"></div>
            <div class="body-user">
                <div ng-show="tab==1" class="annonce-body row">
                    <div class=" col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-repeat=" item in annonces">
                        <div ng-show="annonces.length==0" class="center">
                                <img src="/assets/img/robo.png"><br>
                            <span >لا يوجد إعلانات</span>

                        </div>

                        <div class="annonce" style="background-image:url({{item.images[0]}});margin: 15px 0;height:220px;">
                            <a href="annonces/edit/{{item.id}}">
                                <button class="like  ">
                                    <i class="fa fa-pencil"></i>
                                </button>
                            </a>
                            <div class="share dropdown">
                                <button class="white " type="button" data-toggle="dropdown">
                                    <i class="fa fa-share-alt-square"></i>

                                </button>
                                <div class=" dropdown-menu drop">
                                    <a href="" socialshare socialshare-provider="facebook" socialshare-url="estbdl.com/annonces/{{item.id}}">
                                        <i class="fa fa-facebook-square"></i>
                                    </a>
                                    <a href="" socialshare socialshare-provider="twitter" socialshare-url="estbdl.com/annonces/{{item.id}}" socialshare-text="{{item.name +'  '+item.price}} ريال  estbdl.com/annonces/{{item.id}}">
                                        <i class="fa fa-twitter-square"></i>
                                    </a>

                                    <a href="" socialshare socialshare-provider="google" socialshare-url="estbdl.com/annonces/{{item.id}}" socialshare-text="{{item.name +'  '+item.price}} ريال  estbdl.com/annonces/{{item.id}}">
                                        <i class="fa fa-google-plus-square"></i>
                                    </a>
                                    <a href="" socialshare socialshare-provider="skype" socialshare-url="estbdl.com/annonces/{{item.id}}" socialshare-text="{{item.name +'  '+item.price}} ريال  estbdl.com/annonces/{{item.id}}">
                                        <i class="fa fa-skype"></i>
                                    </a>
                                    <a href="" socialshare socialshare-provider="email" socialshare-subject="{{item.name}}" socialshare-body="{{item.name +'  '+item.price}} ريال  estbdl.com/annonces/{{item.id}}">
                                        <i class="fa fa-envelope"></i>
                                    </a>

                                </div>
                            </div>

                            <button class="price ">{{item.price}} ريال</button>

                            <a href="annonces/{{item.id}}">
                                <div style="width:100%; height:100%;"></div>
                            </a>


                        </div>

                    </div>


                </div>
                <div ng-show="tab==2" class="annonce-body row">
                    <div ng-show="favAnnonces.length==0" class="center">
                            <img src="/assets/img/robo.png"><br>
                        <span >لا يوجد إعلانات</span>

                    </div>
                    <div class=" col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-repeat=" item in favAnnonces">

                        <div class="annonce" style="background-image:url({{item.images[0]}});margin: 15px 0;height:220px;">
                            <button class="like {{isLike(item)}} " ng-click="like(item)">
                                <i class="fa fa-heart-o"></i>
                            </button>
                            <button class="price ">{{item.price}} ريال</button>

                            <a href="annonces/{{item.id}}">
                                <div style="width:100%; height:100%;"></div>
                            </a>


                        </div>

                    </div>


                </div>
                <div ng-show="tab==3" class="user-profile row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                        <div class="avatar">
                            <kr-file-upload auto name="backgroundUploader" queue="imagesQueue" allowed-extensions="jpg,jpeg,png,gif" display="inline"
                                file-uploaded="fileUploaded(fileInfo, object)" file-removed="fileRemoved(fileInfo, index)" fail="uploadFail()"></kr-file-upload>
                        </div>
                        <input class="line-input" type="text" ng-model="user.fullName" maxlength="30" placeholder="الاسم">
                        <input class="line-input" type="text" ng-model="user.adresse" maxlength="30" placeholder="العنوان">
                        <button ng-click="save()" class="save">حفظ</button>
                        <!-- <div class="row notif">
                            <div class="col-xs-6">
                                <span>تفعيل الإشعارات</span>
                            </div>
                            <div class="col-xs-6">
                                <input type="checkbox"  class="switch_1">
                            </div>
                        </div> -->

                    </div>


                </div>


            </div>

        </div>

        <div class="modal fade" id="info-credit" kr-modal="infoCredit">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-body ">
                        <div ng-bind-html="config.transferInformation">



                        </div>


                    </div>
                    <div class="modal-footer">
                        <div id="paypal"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>



</div>