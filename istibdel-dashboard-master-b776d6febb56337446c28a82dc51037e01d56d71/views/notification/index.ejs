<div class="page-content" style="top:66px" block-ui="blockPage">
    <div class="header m-r-60">
        <div class="append-icon">


        </div>
        <div class="breadcrumb-wrapper">
           <button type="button" class="btn btn-primary btn-square" ng-click="send()">
                <i class="icon-check" /> إرسال</button> 
        </div>
    </div>
    <div class="row m-l-60 m-r-60 m-t-30">
        <div class="col-md-12">


            <h3 class="m-t-30 m-b-10">
                <strong>بيانات الإشعار</strong>
            </h3>

            <div class="panel">
                <div class="panel-content clearfix">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">الرسالة</label>
                            <div class="col-sm-10">
                                <textarea class="form-control " rows="10" type="text" ng-model="notification.message" placeholder="نص الرسالة..." />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">نوع الجهاز</label>
                            <div class="col-sm-10">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown" aria-expanded="false">{{notification.device ||'الكل'}}
                                        <span class="caret"></span>
                                    </button>
                                    <span class="dropdown-arrow dropdown-arrow-inverse"></span>
                                    <ul class="dropdown-menu dropdown-inverse" role="menu" style="position: relative;" s>
                                        <li ng-click="deviceChange('الكل')">
                                            <a href="#">الكل </a>
                                        </li>
                                        <li ng-click="deviceChange('أبل')">
                                            <a href="#">أبل </a>
                                        </li>
                                        <li ng-click="deviceChange('أندرويد')">
                                            <a href="#">أندرويد </a>
                                        </li>


                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">المستخدمون</label>
                            <div class="col-sm-10">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown" aria-expanded="false">{{notification.users ||'الكل'}}
                                        <span class="caret"></span>
                                    </button>
                                    <span class="dropdown-arrow dropdown-arrow-inverse"></span>
                                    <ul class="dropdown-menu dropdown-inverse" role="menu" style="position: relative;">
                                        <li ng-click="usersChange('الكل')">
                                            <a href="#">الكل </a>
                                        </li>
                                        <li ng-click="usersChange('الأكثر نشاطا')">
                                            <a href="#">الأكثر نشاطا </a>
                                        </li>
                                        <li ng-click="usersChange('الأقل نشاطا')">
                                            <a href="#">الأقل نشاطا </a>
                                        </li>
                                        <li ng-click="usersChange('الأكثر شراء')">
                                            <a href="#">الأكثر شراء </a>
                                        </li>
                                        <li ng-click="usersChange('الأقل شراء')">
                                            <a href="#">الأقل شراء </a>
                                        </li>
                                        <li ng-click="usersChange('الأكثر بيعا')">
                                            <a href="#">الأكثر بيعا </a>
                                        </li>
                                        <li ng-click="usersChange('الأقل بيعا')">
                                            <a href="#">الأقل بيعا </a>
                                        </li>
                                        <li ng-click="usersChange('الأكثر مشاركة')">
                                            <a href="#">الأكثر مشاركة </a>
                                        </li>
                                        <li ng-click="usersChange('الأقل مشاركة')">
                                            <a href="#">الأقل مشاركة </a>
                                        </li>


                                    </ul>
                                </div>


                            </div>
                        </div>
                        <div class="form-group" ng-show="notification.users!=='الكل'">
                            <label class="col-sm-2 control-label">الحد الأقصى</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control " placeholder="" ng-model="userMax">
                            </div>
                        </div>
                        <div class="form-group" ng-show="notification.users!=='الكل'">
                            <label class="col-sm-2 control-label">التاريخ</label>
                            <div class="col-sm-10">
                                <b> من </b>
                                <input type="text" class="form-control date-r-input b-datepicker " ng-model="startDate" date-picker="startDate" disable-past />
                                <b> إلى </b>
                                <input type="text" class="form-control date-r-input b-datepicker " ng-model="endDate" date-picker="endDate" disable-past />
                            </div>
                        </div>

                    </form>
                </div>
            </div>


        </div>
    </div>
</div>