<div class="page-content" style="top:66px">
        <div class="header">
            <div class="append-icon">
                <input type="text" name="firstname" id="finder" class="form-control form-white input-lg search" ng-model="filters.search" placeholder="البحث..." autofocus="">
                <i class="icon-magnifier m-t-10"></i>
    
            </div>
            <div class="breadcrumb-wrapper">
                <button type="button" class="btn btn-primary btn-square" data-toggle="modal" data-target="#myModal" ng-click="selectItem()">
                    <i class="icon-plus" /> إضافة</button>
            </div>
        </div>
        <div class="alert alert-success">
                <i class="fa fa-share-alt"></i> الأقسام الفرعية ل {{parent.name}}
            </div>
        <div class="alert alert-info">
            <i class="fa fa-lightbulb-o"></i> قم بسحب الأقسام لتغيير الترتيب
        </div>
        <div class="row" ui-sortable ng-model="categories" ui-sortable-stop="sortStop()">
            <h1 ng-show="categories.length==0" style="text-align:center">لا يوجد</h1>
    
            <div class="col-md-4  m-b-30" ng-repeat="item in categories | orderBy:'range'" id="item-{{item.id}}">
                <div class="panel panel-default hover-effect">
                    <div class="panel-heading h-150 p-0" >
                            <img src="{{item.thumbnail||'assets/images/user_background_full.jpg'}}" class="img-responsive hover-img" alt="" style="width:100%">
                    </div>
                    <div class="panel-body p-10">
                        <div class="clearfix col-lg-6 col-md-12 col-sm-12">
                            <h3 class="c-dark w-600 align-center">{{item.name}}</h3>
                            <p class="c-gray f-16 align-center"></p>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-12 p-t-20">
                            <div class="col-xs-4 c-gray">
                                <div class="text-center m-b-20">
                                  <a ng-hide="item.isHidden" href="" ng-click="toggle(item,true)"><i class="f-24 fa fa-eye c-green"></i></a>  
                                  <a ng-show="item.isHidden" href="" ng-click="toggle(item,false)"><i class="f-24 fa fa-eye-slash c-gray"></i></a> 
                                </div>
                                <div class="text-center">
    
                                </div>
                            </div>
                            <div class="col-xs-4 c-gray">
                                <div class="text-center m-b-20">
                                  <a href="" data-toggle="modal" data-target="#myModal"><i class="f-24 fa fa-edit c-primary" ng-click="selectItem(item)"></i></a>  
                                </div>
                                <div class="text-center">
    
                                </div>
                            </div>
                            <div class="col-xs-4 c-gray">
                                <div class="text-center m-b-20">
                                  <a href="" delete-btn="item" container-id="#item-{{item.id}}"><i class="f-24 icon-trash c-red"></i></a>
                                </div>
                                <div class="text-center">
    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    
        </div>
        
        <div class="modal fade" id="myModal" data-backdrop="static" block-ui="modalUI" kr-modal="myModal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header bg-primary">
                            <button type="button" class="close" id="close" data-dismiss="modal" aria-label="Close" ng-click="cancel()" style="margin-top:10px !important;"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title">
                                    <strong>{{modalTitle}}</strong></h4>
                        </div>
                        <div class="modal-body">
                                 <div class="form-group">
                                        <label class="control-label">الاسم</label>
                                        <input type="text" class="form-control" ng-model="selectedItem.name">
                                    </div>
        
                                <div class="form-group">
                                        <label class="control-label">صورة الخلفية</label>
                                        <kr-file-upload auto name="backgroundUploader" queue="imagesQueue" allowed-extensions="jpg,jpeg,png,gif" display="inline"
                                                file-uploaded="fileUploaded(fileInfo, object)" file-removed="fileRemoved(fileInfo, index)"
                                                fail="uploadFail()"></kr-file-upload>
                                    </div> 
                            
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default btn-embossed" data-dismiss="modal"  ng-click="cancel()">إلغاء</button>
                            <button type="button" ng-disabled="!selectedItem.name || !selectedItem.thumbnail" class="btn btn-primary btn-embossed" data-dismiss="modal" ng-click="save()">حفظ</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
            
    
    </div>