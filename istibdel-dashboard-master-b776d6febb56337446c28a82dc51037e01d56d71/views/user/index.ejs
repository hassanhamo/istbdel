                        <th>تاريخ التسجيل</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr ng-repeat="item in users"  >
                        <td><img src="{{item.avatar||'assets/images/profile.png'}}" alt="" class="img-circle img-sm"></td>
                        <td>{{item.fullName}}</td>
                        <td>{{item.adresse||'لا يوجد'}}</td>
                        <td>{{item.username||'لا يوجد'}}</td>
                        <td>{{item.isBlocked ?'محظور':'متاح' }}</td>
                        <td>{{item.createdAt|moment:'format':'DD/MM/YYYY'}}</td>
                        <td><i class=" icon-trash c-red" delete-btn="item" container-id="#item-{{item.id}}"></i>
                            <i class=" icon-book-open" ng-click="show(item.id)"></i></td>
                      </tr>
                      
                    </tbody>
                  </table>
                </div>
