<div class="row">
    <div class="col-xs-12">
        <div class="card" block-ui="card">
            <div class="card-header">
                <h4 class="card-title">الطلبات</h4>
                <div class="heading-elements">
                </div>
            </div>
            <div class="card-body collapse in">
                <div class="card-block">
                    <div class="row" style="margin-bottom:10px;">
                        <div class="col-xs-6">
                            <input type="text" class="form-control" placeholder="ابحث..." ng-model="search" ng-model-options="{debounce:1000}" />
                        </div>
                        <div class="col-xs-6">
                            <div page-size-options></div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th style="min-width:85px; width:85px;"></th>
                                    <th>التاجر</th>
                                    <th>الحريف</th>
                                    <th style="width:25%">الاعلان</th>
                                    <th>الثمن</th>
                                    <th>الكمية</th>
                                    <th>تاريخ التسليم</th>
                                    <th>الحالة</th>
                                    <th style="width:200px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-show="!items">
                                    <td colspan="9">
                                        <ajax-loader></ajax-loader>
                                    </td>
                                </tr>
                                <tr ng-repeat="item in items" id="item-{{item.objectId}}" block-ui="row[item.objectId]">
                                    <td>
                                        <div class="img-thumbnail" ng-if="item.annonce.photo[0]">
                                            <img ng-src="{{item.annonce.photo[0].url}}" />
                                        </div>
                                    </td>
                                    <td>
                                        <a href="/dealers/{{item.objectId}}" ng-bind="item.annonce.dealer.name"></a>
                                    </td>
                                    <td>
                                        <a href="/customers/{{item.objectId}}" ng-bind="item.user.name"></a>
                                    </td>
                                    <td ng-bind="item.annonce.Description">
                                    </td>
                                    <td ng-bind="item.annonce.price">
                                    </td>
                                    <td ng-bind="item.quantity">
                                    </td>
                                    <td ng-bind="item.deliveryTime.iso | moment:'fromNow'" title="{{item.deliveryTime.iso | moment:'format':'FullTime'}}">
                                    </td>
                                    <td>
                                        <span><i class="icon-check-circle success"  style="vertical-align: middle;font-size: 20px;"></i> {{item.isClosed ? 'تم':''}}</span>
                                    </td>
                                    <td>
                                        <div class="table-actions">
                                            <button class="btn btn-info" ng-click="select(item)" data-toggle="modal" data-target="#details-modal"><i class="icon-eye"></i> عرض</button>
                                            <button class="btn btn-danger" delete-btn="item" container-id="#item-{{item.objectId}}"><i class="icon-cancel-circle"></i> حذف</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <pager page="filters.page" page-size="filters.pageSize"></pager>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="details-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">تفا</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>

</div>