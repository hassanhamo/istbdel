<div class="page-content" style="top:66px" block-ui="blockPage">
    <div class="header">
        <div class="append-icon">
            <h3 style="display:inline;">وضع الصيانة</h3>
            <div class="onoffswitch">
                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" ng-model="config.maintenance"  id="myonoffswitch1"
                    checked="">
                <label class="onoffswitch-label" for="myonoffswitch1">
                    <span class="onoffswitch-inner">
                        <span class="onoffswitch-active">
                            <span class="onoffswitch-switch">نعم</span>
                        </span>
                        <span class="onoffswitch-inactive">
                            <span class="onoffswitch-switch">لا</span>
                        </span>
                    </span>
                </label>
            </div>

        </div>
        <div class="breadcrumb-wrapper">
            <button type="button" class="btn btn-primary btn-square" ng-click="save()">
                <i class="icon-check" /> حفظ</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
                <div class="col-md-7">
                        <h3 class="m-t-30 m-b-10">
                            <strong>شروط الإستخدام</strong>
                        </h3>
                        <div class="panel">
                            <div class="panel-content clearfix">
                                <summernote height="150" ng-model="config.conditionUse"></summernote>
                            </div>
                        </div>
        
                        <h3 class=" m-b-10">
                            <strong>عن التطبيق</strong>
                        </h3>
                        <div class="panel">
                            <div class="panel-content clearfix">
                                <summernote height="150" ng-model="config.aboutApp"></summernote>
                            </div>
                        </div>

                        <h3 class=" m-b-10">
                                <strong> معلومات التحويل</strong>
                            </h3>
                            <div class="panel">
                                <div class="panel-content clearfix">
                                    <summernote height="150" ng-model="config.transferInformation"></summernote>
                                </div>
                            </div>
        
                    </div>
            <div class="col-md-5">
                <h3 class="m-t-30 m-b-10">
                    <strong>معلومات التواصل</strong>
                </h3>

                <div class="panel">
                    <div class="panel-content clearfix">
                        <form class="form-horizontal" >
                            <div class="form-group">
                                <label class="col-sm-2 control-label">رقم الهاتف</label>
                                <div class="col-sm-10">
                                    <input class="form-control input-sm" type="text" ng-model="config.contacts.phone" placeholder="...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">فيسبوك</label>
                                <div class="col-sm-10">
                                    <input class="form-control input-sm" type="text" ng-model="config.contacts.facebook" placeholder="...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">تويتر</label>
                                <div class="col-sm-10">
                                    <input class="form-control input-sm" type="text" ng-model="config.contacts.twitter" placeholder="...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">انستغرام</label>
                                <div class="col-sm-10">
                                    <input class="form-control input-sm" type="text" ng-model="config.contacts.instagram" placeholder="...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">البريد الالكتروني</label>
                                <div class="col-sm-10">
                                    <input class="form-control input-sm" type="text" ng-model="config.contacts.email" placeholder="...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">واتس أب</label>
                                <div class="col-sm-10">
                                    <input class="form-control input-sm" type="text" ng-model="config.contacts.whatsapp" placeholder="...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">الموقع الإلكتروني</label>
                                <div class="col-sm-10">
                                    <input class="form-control input-sm" type="text" ng-model="config.contacts.site" placeholder="...">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <h3 class="m-t-30 m-b-10">
                        <strong>معلومات الإعلانات</strong>
                    </h3>
    
                    <div class="panel">
                        <div class="panel-content clearfix">
                            <form class="form-horizontal" >
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">مدة الحذف التلقائي </label>
                                    <div class="col-sm-10">
                                        <input class="form-control input-sm" type="number" ng-model="config.autoDelete" placeholder="عدد الايام">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">نسبة الوساطة</label>
                                    <div class="col-sm-10">
                                        <input class="form-control input-sm" type="number" ng-model="config.mediationRatio" placeholder="النسبة المائوية">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">الحد الادنى للتحويل</label>
                                    <div class="col-sm-10">
                                        <input class="form-control input-sm" type="number" ng-model="config.minPayment" placeholder="المبلغ بالريال">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">الحد الاقصى للدين</label>
                                    <div class="col-sm-10">
                                        <input class="form-control input-sm" type="number" ng-model="config.maxPayment" placeholder="المبلغ بالريال">
                                    </div>
                                </div>
                                <div class="form-group">
                                        <label class="col-sm-2 control-label">ضارب التحويل من الريال إلى الدولار</label>
                                        <div class="col-sm-10">
                                            <input class="form-control input-sm" type="number" ng-model="config.currencyConverter" placeholder=" ضارب التحويل ">
                                        </div>
                                    </div>
                               
                            </form>
                        </div>
                    </div>
            </div>
            
        </div>
    </div>
</div>